     <style>
            body,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif;}
   
           fieldset {
                 background: #fafafa;
                 width: 400px;
                 height: 200px;
                 margin: 7px 270px;
                 padding: 25px;
                 box-shadow: 0px 1px 4px rgba(0,0,0,0.4);}
           form-control{
                 text-align: left;
                     }
               </style>
</head>
<body>
    <div class="container" draggable="false">
            <h1 class="w3-center"> The Bulletin Board </h1><hr>
        

        <a href="/add-bulletin.html">
 <button class="w3-button w3-black w3-right w3-section" type="submit messages">
        <i class="btn-add fa fa-paper-plane"></i> Add new bulletin </button>
        </a>

 <hr id="top-hr">
        <div class="inner-board">

                  <% for(i in result.rows) {%>

            <div class='sticky' draggable="true" id=<%= result.rows[i].id %> >
                   

    <fieldset>
            <div class="form-group">
                <label for="exampleFormControlTextarea1"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="1">
                    <%= result.rows[i].title %>
                </textarea>
            </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1"></label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5">
                     <%= result.rows[i].body %>
        </textarea>
    </div>


   <form method='POST' action='/delete/messages/  <%= result.rows[i].id %>'> 

    <button class="w3-button w3-black w3-right w3-section" type="submit messages">
            <i class="btn-add fa fa-ban"></i> Delete  </button>
             </form>
                </div>
           
  <% } %>


        </div>    
    </div>
</fieldset>


