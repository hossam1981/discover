  <style>
  body,h1,h2,h3,h4,h5,h6 {font-family: "Lato", sans-serif;}

body, html {
    height: 100%;
    color: #777;
    line-height: 1.8;
}

#page-wrap {
width: 980px;
text-align: center;
margin: 0 auto;
}

textarea, select, input{
    background-color: gainsboro
}
button{
    float: right;
    border-radius: 4px;
}

img {
   width: 100%;
   border:1px solid #ccc;
   padding:4px;
   border-radius: 15px;
   width: 250px;
   height: 250px;
}
img:hover {
            opacity: 0.5; filter: alpha(opacity=50);
          }
#column {
    float: left;
    width: 33.33%;
    padding: 10px;  
}

/* Clearfix (clear floats) */
.row::after {
    content: "";
    clear: both;
    display: table;
   
}
div#column.row {
    width: 250px;
   height: 250px;
   margin: 20px 10px;
   padding: 40px;
   
}
  </style>

  <title>Upload File</title>
  </head>
<body>

        <h1 class="w3-center">Upload File</h1><hr>
        <div id="page-wrap">

    <form action="/upload" method="POST" enctype="multipart/form-data">
    <label>
            Upload File: <input type="file" name="photo">

            <button type="button" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-upload"></span> Submit  </button>
    </label>
    </form>
    </div>
    <hr>




    <% for (let i in data) {%>

        <div class="row" id="column"><img src= 'thumbnails/<%= data[i] %>'>
        <p><%= data [i] %></p></div>

        <% } %>

</body>
</html>