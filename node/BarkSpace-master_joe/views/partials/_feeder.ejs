
<div id="wrapper">
  <div id="feed">

<% for (var i = 0; i < rows.length ; i++) { %>
  <% let data = rows[i].dataValues %>
  <div class="post" data-postID=<%= data.id %> >
    <div class="postHead">
      <img src=<%= '.'+data.profilepic %> class="user_pic">
      <h4 class="username"><%= data.username %> | <%= data.createdAt %></h4>

    </div>
    <div class="postBody">
      <img src=<%= "../images/posts/" + data.postpic %> class="post_pic">
    </div>
    <div class="postFooter">
      <img src="" class="like_pic">
      <form action='/like' method='post'>
      <button type="submit" class="likeBtn glyphicon glyphicon-heart" name="postid" data-postID=<%= data.id %> ><%= data.likes %> likes</button>
      </form>

      
<!-- 
      <div class="description" ><%= data.description %></div>
      <div class="comments">
        <textarea placeholder="Let add a #description" class="w3-input w3-border w3-round"></textarea>
      </div>
    </div> -->


    <form action="/comment" method="post">
      <div class="comments">

        <textarea  class="w3-input w3-border w3-round" placeholder="Type your Message..." class="commentBody"></textarea>

       
       <!-- <input class="w3-input" type="text" placeholder="Type your Message..."> -->
         

  <button class="commentBtn w3-button w3-black w3-right w3-section" type="submit" data-postID=<%= data.id %>> SEND <i class="btn-add fa fa-paper-plane "></i>
            </button>


        <!-- <button type="submit" class="commentBtn"  data-postID=<%= data.id %>>Submit</button> -->


      </div>
      </form>
    </div>

    <% } %>

  </div>
</div>


